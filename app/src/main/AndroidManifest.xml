<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nohhs.eventbusapplication" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OttoActivity"
            android:label="@string/title_activity_otto" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.pluusystem.eventbus.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GuavaActivity"
            android:label="@string/title_activity_guava" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.pluusystem.eventbus.SAMPLE_CODE" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventBusActivity"
            android:label="@string/title_activity_event_bus" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="com.pluusystem.eventbus.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>

</manifest>
